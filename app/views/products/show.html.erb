<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Reviews</dt>
          <% @reviews.each do |review| %>
            <dd><%= review.description%></dd>
            <dd>Rating:</dd>
              <dd>
              <% (1..review.rating).each do |counter| %>
                <i class="fa fa-star btn btn-sm btn-warning" aria-hidden="true"></i>
              <% end %>
              <dd>
                <% if current_user && current_user.id == review.user_id %>
                  <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
              </dd>
              </dd>
          <% end %>
          <% if current_user %>
            <div>
              <%= form_for ([@product, Review.new]) do |f| %>
                <%= f.text_area :description %>
                <%= f.select :rating, [1,2,3,4,5] %>
                <%= f.hidden_field :product_id, :value => @product.id %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.submit 'Submit' %>
              <% end %>
            </div>
          <% end %>
      </dl>
      </div>
    </div>

  </article>

</section>
